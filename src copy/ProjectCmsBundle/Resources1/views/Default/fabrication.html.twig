{% extends 'ProjectCmsBundle::layout.html.twig' %}
 {% block body %}

<style>
img {max-width:100%;}
</style>


            <!-- Naturix Goods Starts-->
            <section class="naturix-goods sec-space light-bg">
                <div class="container"> 
                    <div class="title-wrap">
                        <h2 class="section-title"> <span class="light-font">Our </span> <strong>Fabrication<img src="{{ asset('bundles/projectcms/img/icons/logo-icon.png') }}" alt="" /></strong> </h2>
                    </div>
            
                    <div class="tab-content organic-content row"> 
                        <div id="naturix-tab-1" class="tab-pane fade active in"> 
                            <div class="naturix-slider-1 dots-1"> 


{% if result is defined and result|length>0 %}
