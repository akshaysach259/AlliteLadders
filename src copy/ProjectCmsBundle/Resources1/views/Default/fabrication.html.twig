                <div class="product-media"> 
                    <img class="prod-img" alt="" src="/web/uploads/media/default/0001/01/thumb_{{queryProductsResult.image.id}}_default_td_160.{{imageType}}" />     
                 </div>                                           
                <div class="product-caption"> 
                    <h3 class="product-title">
<a href="{{ path('_page_msfabrication_list', { 'urlAlias':queryProductsResult.pageUrl }) }}"> {#<span class="light-font"> organic </span>#}  <strong>{{queryProductsResult.pageTitle}}</strong></a>
                    </h3>
		<div class="price"> 
		<strong class="clr-txt"><a href="{{ path('_page_msfabrication_list', { 'urlAlias':queryProductsResult.pageUrl }) }}" style="color:#7fba00">View More</a></strong>
		</div>
                </div>
            </div>
	{% if loop.index%2==0 and not loop.last %}
        </div><div class="item"> 
       {% endif %}

	{% endfor %}
         </div>
	{% endif %}


 
                            </div>
                        </div>
                    </div>

                </div>
